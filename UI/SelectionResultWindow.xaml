<Window x:Class="OcrApp.UI.SelectionResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR 选择模式" Height="600" Width="800" Icon="pack://application:,,,/icon.ico"
        WindowStartupLocation="CenterScreen"
        Background="#aecbfa" 
        Foreground="#f4faf6"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResize"
        MinWidth="600" MinHeight="400"
        MouseMove="Window_MouseMove"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="SelectionResultWindow_KeyDown">

    <Window.Resources>
        <!-- 词汇块样式 -->
        <Style x:Key="WordButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#404040"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#606060"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                                <Setter Property="BorderBrush" Value="#707070"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 选中的词汇块样式 -->
        <Style x:Key="SelectedWordButtonStyle" TargetType="Button" BasedOn="{StaticResource WordButtonStyle}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="BorderBrush" Value="#106EBE"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1084D8"/>
                    <Setter Property="BorderBrush" Value="#0F6CBD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 操作按钮样式 -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EABCAC"/>
            <Setter Property="Foreground" Value="#4A4A3F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0C6B6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#606060"/>
                                <Setter Property="Foreground" Value="#A0A0A0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- 词汇选择区域 -->
        <ScrollViewer Grid.Row="0" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="20">
            <WrapPanel x:Name="WordsPanel" 
                       Orientation="Horizontal"
                       ItemWidth="Auto"
                       ItemHeight="Auto"/>
        </ScrollViewer>

        <!-- 选中结果显示区域 -->
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="已选择的内容：" 
                       Grid.Row="0"
                       Foreground="#FFFFFF" 
                       FontSize="12" 
                       Margin="0,0,0,5"/>
            
            <Border Grid.Row="1" 
                    Background="#303030" 
                    BorderBrush="#606060" 
                    BorderThickness="1"
                    CornerRadius="4">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="SelectedTextBox"
                             Background="Transparent"
                             Foreground="#FFFFFF"
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"
                             TextWrapping="Wrap"
                             IsReadOnly="True"
                             Text="请将鼠标悬停在上方词汇上进行选择..."/>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- 操作按钮区域 -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button x:Name="CopyButton" 
                    Content="复制原文(Alt+C)" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CopyButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="Extension1Button" 
                    Content="扩展一(Alt+E)" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="Extension1Button_Click"
                    IsEnabled="False"/>
            <Button x:Name="Extension2Button" 
                    Content="扩展二(Alt+R)" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="Extension2Button_Click"
                    IsEnabled="False"/>
            <Button x:Name="ClearButton" 
                    Content="清空选择" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="ClearButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="SelectAllButton" 
                    Content="全选" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="SelectAllButton_Click"/>
            <Button x:Name="CloseButton" 
                    Content="关闭(Alt+D)" 
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>