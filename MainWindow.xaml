<Window x:Class="OcrApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskOCR 设置" Height="520" Width="520" Icon="pack://application:,,,/icon.ico"
        ShowInTaskbar="False"
        Visibility="Hidden"
        Background="#aecbfa"
        Foreground="#303030"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#EABCAC"/>
            <Setter Property="Foreground" Value="#4A4A3F"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#E3A996"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#D88E77"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 自定义标题栏 -->
        <Grid Grid.Row="0" Background="#aecbfa" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel LastChildFill="False">
                <TextBlock x:Name="TitleBarText" Text="" 
                          Foreground="#FFFFFF" 
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"
                          DockPanel.Dock="Left"/>
                <Button Content="×" 
                        DockPanel.Dock="Right"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#303030"
                        Click="CloseButton_Click"
                        VerticalAlignment="Center"/>
            </DockPanel>
        </Grid>

        <!-- 主要内容区域 -->
        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden">
        <ScrollViewer.Resources>
            <Style TargetType="ScrollBar">
                <Setter Property="Width" Value="10"/>
                <Setter Property="Background" Value="#E5E9F0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid x:Name="Root" Background="{TemplateBinding Background}">
                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Focusable="False" Visibility="Collapsed"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" Focusable="False" Visibility="Collapsed"/>
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb x:Name="Thumb" Background="#C2CAD6">
                                            <Thumb.Template>
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="5"/>
                                                </ControlTemplate>
                                            </Thumb.Template>
                                        </Thumb>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter Property="Height" Value="10"/>
                                    <Setter Property="Width" Value="Auto"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Thumb" Property="Background" Value="#A9B6C7"/>
                                    <Setter TargetName="Root" Property="Background" Value="#DCE3EC"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="#181818"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,10,0"/>
            </Style>
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="#303030"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}" CornerRadius="6">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="#303030"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton Name="ToggleButton" Background="{TemplateBinding Background}" BorderThickness="0" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <Border x:Name="Border" Grid.ColumnSpan="2" Background="{TemplateBinding Background}" BorderThickness="0" />
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="#FFFFFF" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>
                                <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="5,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}" Template="{DynamicResource ComboBoxTextBox}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,3,23,3" Focusable="True" Background="Transparent" Foreground="#FFFFFF" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                    <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder" Background="#303030" BorderThickness="0"/>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="#303030"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
                <Setter Property="Padding" Value="5"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsHighlighted" Value="true">
                                    <Setter TargetName="Border" Property="Background" Value="#404040"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="#808080"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ScrollViewer.Resources>
        <StackPanel>

            

            <Border Background="#455c96ff" BorderBrush="#E5E9F0" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock x:Name="HotkeySettingsTitle" Text="快捷键设置" FontSize="16" FontWeight="Bold" Foreground="#181818" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ScreenshotOCRLabel" Text="截图OCR快捷键:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="HotkeyTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Text="Ctrl+L" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                        <TextBlock x:Name="CopyOriginalHotkeyLabel" Text="复制原文快捷键:" Grid.Row="3" Grid.Column="0"/>
                        <TextBox x:Name="CopyOriginalHotkeyTextBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" Text="Alt+C" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                        <TextBlock x:Name="CloseWindowHotkeyLabel" Text="关闭窗口快捷键:" Grid.Row="4" Grid.Column="0"/>
                        <TextBox x:Name="CloseHotkeyTextBox" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10" Text="Alt+D" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                        <TextBlock x:Name="SelectionClearHotkeyLabel" Text="清空选择快捷键:" Grid.Row="5" Grid.Column="0"/>
                        <TextBox x:Name="SelectionClearHotkeyTextBox" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10" Text="Alt+X" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                        <TextBlock x:Name="SelectionSelectAllHotkeyLabel" Text="全选快捷键:" Grid.Row="6" Grid.Column="0"/>
                        <TextBox x:Name="SelectionSelectAllHotkeyTextBox" Grid.Row="6" Grid.Column="1" Text="Alt+A" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="#455c96ff" BorderBrush="#E5E9F0" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock x:Name="DisplayModeTitle" Text="显示与模式" FontSize="16" FontWeight="Bold" Foreground="#181818" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="ResultWindowFontSizeLabel" Text="结果窗口字体大小:" Grid.Row="0" Grid.Column="0"/>
                        <ComboBox x:Name="FontSizeComboBox" Grid.Row="0" Grid.Column="1" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <ComboBoxItem Content="8"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="12"/>
                            <ComboBoxItem Content="14"/>
                            <ComboBoxItem Content="16"/>
                            <ComboBoxItem Content="18"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="24"/>
                            <ComboBoxItem Content="28"/>
                        </ComboBox>
                        <TextBlock x:Name="OCRModeLabel" Text="OCR模式:" Grid.Row="1" Grid.Column="0"/>
                        <ComboBox x:Name="OCRModeComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                            <ComboBoxItem x:Name="OcrClassicItem" Content="经典模式" Tag="Classic"/>
                            <ComboBoxItem x:Name="OcrSilentItem" Content="静默模式" Tag="Silent"/>
                            <ComboBoxItem x:Name="OcrSelectionItem" Content="选择模式" Tag="Selection"/>
                        </ComboBox>
                        <TextBlock x:Name="InterfaceLanguageLabel" Text="界面语言:" Grid.Row="2" Grid.Column="0" Margin="0,12,10,0"/>
                        <ComboBox x:Name="LanguageComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" SelectionChanged="LanguageComboBox_SelectionChanged">
                            <ComboBoxItem Content="中文(简体)" Tag="zh-CN"/>
                            <ComboBoxItem Content="English" Tag="en-US"/>
                            <ComboBoxItem Content="Français" Tag="fr-FR"/>
                            <ComboBoxItem Content="Deutsch" Tag="de-DE"/>
                            <ComboBoxItem Content="日本語" Tag="ja-JP"/>
                            <ComboBoxItem Content="中文(繁體)" Tag="zh-TW"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Background="#455c96ff" BorderBrush="#E5E9F0" BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                <StackPanel>
                    <TextBlock x:Name="Extension1Title" Text="扩展一" FontSize="16" FontWeight="Bold" Foreground="#181818" Margin="0,0,0,8"/>
                    <CheckBox x:Name="Extension1EnabledCheckBox" Content="启用扩展一" IsChecked="True" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Extension1NameLabel" Text="名称:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="Extension1NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
                        <TextBlock x:Name="Extension1PluginLabel" Text="插件:" Grid.Row="1" Grid.Column="0"/>
                        <ComboBox x:Name="Extension1PluginComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                        <TextBlock x:Name="Extension1HotkeyLabel" Text="快捷键:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox x:Name="Extension1HotkeyTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                    </Grid>

                    <TextBlock x:Name="Extension2Title" Text="扩展二" FontSize="16" FontWeight="Bold" Foreground="#181818" Margin="0,12,0,8"/>
                    <CheckBox x:Name="Extension2EnabledCheckBox" Content="启用扩展二" IsChecked="True" Margin="0,0,0,8"/>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="160"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="Extension2NameLabel" Text="名称:" Grid.Row="0" Grid.Column="0"/>
                        <TextBox x:Name="Extension2NameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10"/>
                        <TextBlock x:Name="Extension2PluginLabel" Text="插件:" Grid.Row="1" Grid.Column="0"/>
                        <ComboBox x:Name="Extension2PluginComboBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"/>
                        <TextBlock x:Name="Extension2HotkeyLabel" Text="快捷键:" Grid.Row="2" Grid.Column="0"/>
                        <TextBox x:Name="Extension2HotkeyTextBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" IsReadOnly="True" PreviewKeyDown="HotkeyInput_PreviewKeyDown" GotFocus="HotkeyInput_GotFocus" LostFocus="HotkeyInput_LostFocus"/>
                    </Grid>
                </StackPanel>
            </Border>

            
        </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button x:Name="SaveSettingsButton" Content="保存设置" Width="120" Click="SaveSettings_Click" Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>
